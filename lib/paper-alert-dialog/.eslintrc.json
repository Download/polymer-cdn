{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": false,
		"mocha": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": false
		},
		"sourceType": "script"
	},
	"rules": {
		"no-const-assign": "error",
		"no-this-before-super": "warn",
		"no-undef": "error",
		"no-unreachable": "error",
		"no-unused-vars": "warn",
		"constructor-super": "warn",
		"valid-typeof": "warn"
	}
}
